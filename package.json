{
  "name": "weather-app",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "20.x",
    "npm": "9.x"
  },
  "scripts": {
    "test:backend": "jest --config jest.backend.config.js",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix app/client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "preview": "vite preview",
    "heroku-prebuild": "npm install && cd app/client && npm install",
    "heroku-postbuild": "cd app/client && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.4.4",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.24.7",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    }
  }
}
